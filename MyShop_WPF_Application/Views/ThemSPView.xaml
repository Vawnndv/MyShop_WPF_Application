        <TextBlock TextAlignment="Center" FontSize="30" FontWeight="Bold" FontFamily="Sitka Subheading" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="#348F6C" Margin="0 20 0 0"> THÊM SẢN PHẨM</TextBlock>
        <Grid Margin="0, 50, 0, 0" Height="550">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>


            <TextBox Grid.Row="0" 
                 materialDesign:HintAssist.Hint="Tên sản phẩm"
                 Width="180"
                 VerticalAlignment="Top"
                 FontSize="15"
                 Margin="92,20,83,0"
                 Background="Transparent"
                 FontFamily="Sitka Subheading"
                 FontWeight="Bold"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                 Name="addProductName" TextChanged="addProductName_TextChanged"/>

            <ComboBox Name="addcomboboxCategory"
                  Grid.Row="0" Grid.Column="1"
                  BorderBrush="#348F6C"
                  Margin="93,20,82,0"
                  Width="180"
                  FontSize="15"
                  FontWeight="Bold"
                  FontFamily="Sitka Subheading"
                  VerticalAlignment="Top"
                   Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                  materialDesign:HintAssist.Hint="Loại sản phẩm"
                  SelectionChanged="ComboPageIndex_SelectionChanged"
                  DropDownOpened="ComboProductTypes_DropDownOpened"
                  DropDownClosed="ComboProductTypes_DropDownClosed"
                  ItemsSource="{Binding LongListToTestComboVirtualization}">
            </ComboBox>


            <TextBox Grid.Row="1" Grid.Column="0"
                Width="180"
                Margin="92,20,83,0"
                FontSize="15"
                FontWeight="Bold"
                FontFamily="Sitka Subheading"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                VerticalAlignment="Top"
                VerticalScrollBarVisibility="Auto"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                materialDesign:HintAssist.Hint="Tồn kho hiện tại/ban đầu"
                Text="{Binding ProductQuantity}"
                Name="addProductQuantity" TextChanged="addQuantity_TextChanged"/>


            <TextBox Grid.Row="1" Grid.Column="2"
                 Width="180"
                 VerticalAlignment="Top"
                 Margin="92,20,83,0"
                 Text="{Binding ProductPrice, Converter={StaticResource priceFormat}}"
                 FontWeight="Bold"
                 FontSize="15"
                 FontFamily="Sitka Subheading"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Name="addProductPrice">
                <materialDesign:HintAssist.Hint>
                    <TextBlock>
                    <Bold>Giá sản phẩm</Bold> (₫)
                    </TextBlock>
                </materialDesign:HintAssist.Hint>
            </TextBox>

            <TextBox Grid.Row="0" Grid.Column="2"
            Width="180"
            Margin="93,20,82,0"
            FontSize="15"
            FontWeight="Bold"
            FontFamily="Sitka Subheading"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            VerticalScrollBarVisibility="Auto"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            Text="{Binding ProductPriceOriginal}"
            Name="addProductPriceOriginal">
                <materialDesign:HintAssist.Hint>
                    <TextBlock>
                    <Bold>Giá vốn</Bold> (₫)
                    </TextBlock>
                </materialDesign:HintAssist.Hint>
            </TextBox>
            <StackPanel  Grid.Column="1" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center"  Margin="92,20,83,0" HorizontalAlignment="Left" >
                <Button 
                    Margin="0, 0, 10, 0"
                    Width="25" Height="25"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                    Click="BtnAddImageProduct_Click"
                    Name="btnAddImageProduct">
                    <materialDesign:PackIcon Kind="Add" Height="20" Width="20"/>
                </Button>
                <Label 
                   Height="25"
                   Content="Ảnh sản phẩm"
                   FontSize="15"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontFamily="Sitka Subheading"
                   FontWeight="Bold"/>

            </StackPanel>

            <Border Grid.Column="1" Grid.Row="2" Grid.RowSpan="3" VerticalAlignment="Top">
                <Border.Effect>
                    <DropShadowEffect
                                    Color="Black"
                                    Direction="270"
                                    ShadowDepth="1"
                                    BlurRadius="10"/>
                </Border.Effect>
                <Image Stretch="UniformToFill"
                   Width="180" Height="180"
                   Name="editProductAvatar"
                   Source="{Binding Path=ProductAvatar,Converter={StaticResource absolute}}">
                </Image>
            </Border>

